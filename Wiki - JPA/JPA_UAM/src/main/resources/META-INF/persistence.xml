<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="wiki_jpa">
        <!-- Puedes dejarlo o eliminarlo; Hibernate 7 se auto-detecta -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>uam.edu.ni.jpa.entity.Genero</class>
        <class>uam.edu.ni.jpa.entity.Pelicula</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/wiki_jpa"/>
            <property name="jakarta.persistence.jdbc.user" value="David"/>
            <property name="jakarta.persistence.jdbc.password" value="Dsanchez2303"/>

            <!--- <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/> -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
